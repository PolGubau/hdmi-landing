---
import { Icon } from "astro-icon/components";
import { getLangFromUrl, useTranslations } from "~/i18n/utils";
import { getMetadata } from "~/lib/constants";
import CtaButton from "../ui/CtaButton.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const { getInTouch } = getMetadata();
---

<section
  id="contact"
  class="px-6 py-32 sm:py-40 lg:px-8 bg-gradient-to-br from-primary/5 via-background to-primary/10 dark:from-primary/10 dark:via-background dark:to-primary/5 w-full"
>
  <div class="mx-auto max-w-7xl">
    <div
      class="mx-auto max-w-2xl text-center intersect-once intersect:motion-preset-blur-down motion-delay-200 first_hidden"
    >
      <h2
        class="text-balance text-4xl font-bold tracking-tight text-foreground sm:text-5xl"
      >
        {t("contact.title")}
      </h2>
      <p class="mt-6 text-pretty text-lg leading-relaxed text-muted-foreground">
        {t("contact.subtitle")}
      </p>
    </div>

    <div class="mx-auto mt-16 max-w-2xl">
      <div
        class="rounded-2xl bg-card dark:bg-card/50 p-8 md:p-12 border border-border shadow-lg intersect-once intersect:motion-preset-blur-up motion-delay-300 first_hidden"
      >
        <div class="flex text-center gap-6 flex-col items-center">
          <div
            class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-primary/10 dark:bg-primary/20"
          >
            <Icon
              name="whatsapp"
              class="size-10 text-primary-800 dark:text-primary-400"
            />
          </div>

          <div>
            <h3 class="text-2xl font-bold mb-2">
              {t("letsTalk")}
            </h3>
            <p class="text-muted-foreground">
              Respuesta rápida y personalizada para tu proyecto
            </p>
          </div>

          <CtaButton />

          <!-- <div class="pt-6 border-t border-border">
            <p class="text-sm text-muted-foreground">
              También puedes escribirnos a:
            </p>
            <a
              href="mailto:gubaupol@gmail.com"
              class="text-primary hover:text-primary-800 dark:hover:text-primary-300 font-medium transition-colors"
            >
              gubaupol@gmail.com
            </a>
          </div> -->
        </div>
      </div>

      <!-- Additional contact info -->
      <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
        <div
          class="intersect-once intersect:motion-preset-blur-up motion-delay-400 first_hidden"
        >
          <div
            class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 dark:bg-primary/20 mb-3"
          >
            <Icon
              name="message"
              class="h-6 w-6 text-primary-800 dark:text-primary-400"
            />
          </div>
          <h4 class="font-semibold mb-1">Respuesta Rápida</h4>
          <p class="text-sm text-muted-foreground">En menos de 24h</p>
        </div>

        <div
          class="intersect-once intersect:motion-preset-blur-up motion-delay-500 first_hidden"
        >
          <div
            class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 dark:bg-primary/20 mb-3"
          >
            <Icon
              name="compass"
              class="h-6 w-6 text-primary-800 dark:text-primary-400"
            />
          </div>
          <h4 class="font-semibold mb-1">Consultoría Gratis</h4>
          <p class="text-sm text-muted-foreground">Primera sesión sin coste</p>
        </div>

        <div
          class="intersect-once intersect:motion-preset-blur-up motion-delay-600 first_hidden"
        >
          <div
            class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 dark:bg-primary/20 mb-3"
          >
            <Icon
              name="star"
              class="h-6 w-6 text-primary-800 dark:text-primary-400"
            />
          </div>
          <h4 class="font-semibold mb-1">Presupuesto Personalizado</h4>
          <p class="text-sm text-muted-foreground">Adaptado a tu proyecto</p>
        </div>
      </div>
    </div>
  </div>
</section>
